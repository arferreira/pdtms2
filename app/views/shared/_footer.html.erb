    <footer style="margin-top:40px;">
    	<div class="footer_wrap">
          <div class="footer-container">
            <div class="one-fourth first">
              <h3>Últimos <span>Artigos</span></h3>
              <% @artigos = Article.find(:all, :limit => 8, :order => 'id desc')   %>
              <ul class="archives">
                          <% @artigos.each do |a| %>
                            <li><%= link_to a.title, :controller => 'home', :action => 'index'  %></li>
                           <% end %>
              </ul>
            </div>
            <div class="one-fourth">
              <h3>Recentes da <span>Galeria</span></h3>
              <div class="r-blog">
                <% 

                   @galeria = Gallery.last(:limit => 3) 

                   @fotos = Foto.where(gallery_id: @galeria)

                %>
                <% @fotos.each do |foto| %>
                <div class="third"> 
                    <%= image_tag foto.imagefoto_url(:mini_thumb).to_s %> 
                    <small><a href="#"><%= @galeria.created_at.strftime('%d/%M/%Y') %></a></small> 
                    <h4><a href="<%= foto.imagefoto_url(:mega_thumb).to_s %>" data-lightbox="roadtrip"><%= @galeria.name %></a></h4>
                    <p><%= @galeria.description %></p>
                </div>
               <% end %>
              </div>
            </div>
            <div class="one-fourth">
              <h3>Twitter <span>Últimas</span></h3>
              <a class="twitter-timeline" href="https://twitter.com/MS_PDT" data-widget-id="380041434281177088">Tweets by @MS_PDT</a>
            </div>
            <div class="one-fourth">
              <h3>Envie uma mensagem para o <span style="color:red;">PDT</span></h3>
              <form action="#" class="footer-contactform">
                <p>
                  <input type="text" name="name" value="Seu nome" onBlur="if (this.value == ''){this.value = 'Your Name'; }" onFocus="if (this.value == 'Your Name') {this.value = '';}" >
                  <input type="text" name="email" value="Seu email" onBlur="if (this.value == ''){this.value = 'Your Email'; }" onFocus="if (this.value == 'Your Email') {this.value = '';}">
                </p>
                <p>
                  <textarea name="message" rows="5" onBlur="if (this.value == ''){this.value = 'Your Message'; }" onFocus="if (this.value == 'Your Message') {this.value = '';}">Sua Mensagem</textarea>
                </p>
                <p>
                  <input type="submit" name="submit" class="submit" value="Enviar">
                </p>
              </form>
            </div>
          </div><!--end footer-container-->
